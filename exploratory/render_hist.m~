function render_hist( histogram_values )
%RENDER_HIST Summary of this function goes here
%   Detailed explanation goes here

    clf;
    hold on;
    bar(histogram_values(1, :), 1, 'r', 'EdgeColor', 'none', 'facea', 0.5);
    bar(histogram_values(2, :), 1, 'g', 'EdgeColor', 'none');
    bar(histogram_values(3, :), 1, 'b', 'EdgeColor', 'none');
end

